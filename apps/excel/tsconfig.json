{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@repo/core": ["../../packages/core/src"],
      "@repo/core/*": ["../../packages/core/src/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
